<div class="inner panel members">
  <div class="detail">
    <h2>You have {{ members.length }} member{{ members.length != 1 && 's' || '' }}</h2>

    <p ng-show="memberships.length == 0">You don't have any memberships yet.  Go to the 'Memberships' section and create one.</p>
    <p ng-show="memberships.length > 0 && hasPublicMemberships()">The public URL link will allow anyone to join your public memberships.  If you would like to invite someone to a private membership, use the "Invite Someone" button.</p>
    <p class="member-help" ng-show="memberships.length > 0 && !hasPublicMemberships()">If you would like to invite someone to a private membership, use the "Invite Someone" button.</p>

    <div class="public-link" ng-show="memberships.length > 0 && hasPublicMemberships()">
      <div>Public URL</div>
      <input type="text" value=<%= request.protocol + request.host_with_port + public_invite_path(current_user.id) %> readonly>
    </div>
    <button class="btn" ng-click="openInvite()" ng-show="memberships.length > 0">Invite someone</button>

    <table id="members" ng-hide="members.length == 0">
      <thead>
        <tr>
          <th>Membership</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Joined</th>
          <th>Payment</th>
        </tr>
      </thead>
      <tbody>
        <tr class="memberRow" ng-repeat="m in members" ng-click="memberDetail(m)">
          <td>{{ m.membership }}</td>
          <td>{{ m.full_name }}</td>
          <td>{{ m.email }}</td>
          <td>{{ m.phone }}</td>
          <td>{{ m.joined }}</td>
          <td>{{ m.payment && "Paid" || "Not Paid"}}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="invite" ng-show="inviteWrapOpen">
  <div class="wash"></div>
  <div class="form-wrap" ng-form="inviteForm">
    <h2>Invite someone new</h2>
    <label for="invite-email">Email</label>
    <input type="email" ng-model="invite.email" id="invite-email" required>
    <label for="invite-membership">Invite for</label>
    <select id="invite-membership" ng-model="invite.membership_id" ng-options="m.id as m.name for m in memberships">
    </select>
    <div class="submits">
      <button class="btn-secondary" ng-click="inviteWrapOpen = false">Cancel</button>
      <button class="btn" ng-disabled="inviteForm.$invalid || sendingInvite" ng-click="sendInvite(invite)">Send Invite</button> <%= image_tag "ajax-loader.gif", "ng-show" => "sendingInvite" %>
    </div>
  </div>
</div>