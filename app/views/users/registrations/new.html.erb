<div class="container sing-up">
  <h2>Join membr</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.label :full_name %>
      <%= f.text_field :full_name, :autofocus => true %></div>

    <div><%= f.label :organization %>
      <%= f.text_field :organization %></div>

    <div><%= f.label :email %>
    <%= f.email_field :email %></div>

    <div class="password"><%= f.label :password %>
    <%= f.password_field :password, :placeholder => "Password" %>
    <%= f.password_field :password_confirmation, :placeholder => "Password confirmation" %></div>

    <div class="tos"><%= f.check_box :tos %> <%= f.label :tos, "I agree to the terms of service" %> </div>

    <div class="submit"><%= f.submit "Sign up", :class => "btn" %></div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
