<div class="container sing-up">
  <h2>Join membr</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="multi">
      <h3>Personal Information</h3>
      <%= f.text_field :full_name, :autofocus => true, :placeholder => "Full Name" %>
      <%= f.email_field :email, :placeholder => "Email"  %>
      <%= f.password_field :password, :placeholder => "Password" %>
      <%= f.password_field :password_confirmation, :placeholder => "Password confirmation" %>
    </div>

    <div class="multi">
      <h3>Business Information</h3>
      <%= f.text_field :organization, :placeholder => "Business Name" %>
      <%= f.text_field :street_address, :placeholder => "Street Address" %>
      <%= f.text_field :city, :placeholder => "City" %>
      <%= f.text_field :state, :placeholder => "State/Province" %>
      <%= f.text_field :country, :placeholder => "Country" %>
      <%= f.text_field :zipcode, :placeholder => "Zip/Postal Code" %>
      <%= f.text_field :phone_number, :placeholder => "Phone Number" %>
    </div>

    <div class="tos"><%= f.check_box :tos %> <%= f.label :tos, "I agree to the terms of service" %> </div>

    <div class="submit">
      <%= f.submit "Sign up", :class => "btn" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
